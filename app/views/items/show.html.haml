          .item__right
            %table
              %tr
                %th 出品者
                %td
                  =link_to "#" do
                    %span  
                    = @item.user.nickname
                  %p
                  .ratings
                    .rating__good
                    .rating__okay
                    .rating__soso
              %tr
                %th カテゴリー
                %td
                  =link_to "#" do
                    = @item.category
              %tr
                %th ブランド
                %td
                  = link_to "#" do
                    = @item.brand

              %tr
                %th 商品のサイズ
                %td
                  = link_to "#" do
                    =@item.size
              %tr
                %th 商品の状態
                %td
                  = @item.condition

              %tr
                %th 配送料の負担
                %td
                  = @item.delivery_fee

              %tr
                %th 配送の方法
                %td
                  = @item.delivery_method

              %tr
                %th 配送元地域
                %td
                  = link_to "#" do
                    = @item.delivery_location

              %tr
                %th 発送日の目安
                %td

                  = @item.delivery_term

        .price
          %span.price__one
            = insert_price(@item.price)

          %span.price__two
            （税込）
          %span.price__three
            送料込み

        .check
          =link_to "購入画面に進む", "#", class: "to_checkout"
