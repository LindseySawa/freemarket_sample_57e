= render partial: 'shared/header'

.item-toppage
  .swiper-container
    .swiper-slide
      .slide--left-text
        %h2 スマホでかんたんフリマアプリ
        %p メルカリはスマホカメラからすぐに出品できる
        %p 購入時も安心な独自システムのアプリです
        .slide--left-text--icon
          = link_to '#' do
            = image_tag asset_path('apple_store.png'),class:"apple"
          = link_to '#' do
            = image_tag asset_path('google_play.jpg'),class:"google"
      .slide--left-image
        = image_tag asset_path('main_content_pc.png'),class:"slide--left-image"

    .swiper-slide

  .swiper-pagination
  .swiper-button-prev
  .swiper-button-next
  .swiper-scrollbar

  .pickup
    %h2.pickup-top ピックアップカテゴリー

    = render partial: 'items/top-items', locals:{items:@items, word: 'レディース' }
    = render partial: 'items/top-items', locals:{items:@items, word: 'メンズ' }
    = render partial: 'items/top-items', locals:{items:@items, word: 'ベビー・キッズ' }
    = render partial: 'items/top-items', locals:{items:@items, word: 'インテリア・住まい・小物' }

  .pickup
    %h2.pickup-top ピックアップブランド

    = render partial: 'items/top-items', locals:{items:@items, word: 'シャネル' }
    = render partial: 'items/top-items', locals:{items:@items, word: 'ナイキ' }
    = render partial: 'items/top-items', locals:{items:@items, word: 'ルイヴィトン' }
    = render partial: 'items/top-items', locals:{items:@items, word: 'シュプリーム' }

    = render partial: 'shared/sell-btn'
    = render partial: 'shared/bottom-banner'
    = render partial: 'shared/footer-black'