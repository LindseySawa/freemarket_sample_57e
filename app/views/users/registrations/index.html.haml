.user_new
  .body
    .header.single-header
      %h1
        = link_to "https://www.mercari.com/jp/" do
          = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?273499512",alt:"mercari"
    .single-container-registration
      .single-container-registration__top 
        %h2
        新規会員登録
      .single-container-registration__link
        = link_to edit_user_registration_path, class: 'single-container-registration__link__e-mail' do
          = fa_icon 'envelope', class: 'icon'
          メールアドレスで登録する
        = link_to edit_user_registration_path, class: 'single-container-registration__link__facebook' do
          = image_tag "images/facebook_logo.png", size: "25×25"
          Facebookで登録する
        = link_to edit_user_registration_path, class: 'single-container-registration__link__google' do
          = image_tag "images/google_logo.png", size: "25×25"
          Googleで登録する
      
      .footer.single-footer
        = render 'shared/loginfooter'
      